<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Login_form">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/set_toolbar2"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/colorPrimary"></androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/login_icon"
        android:padding="30dp"
        ></ImageView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColorHint="@color/item_toolbar"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:ems="10"
            android:inputType="text"
            android:textSize="22sp"
            android:textColor="@color/item_toolbar"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColorHint="@color/item_toolbar"
        app:passwordToggleEnabled="true"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="22sp"
            android:textColor="@color/item_toolbar"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="#FFAB00"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="#FFAB00"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:onClick="btn_SignupForm"/>

</LinearLayout>