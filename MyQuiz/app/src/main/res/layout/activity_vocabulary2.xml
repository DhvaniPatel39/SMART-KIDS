<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VocabularyActivity2">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="420dp"
        android:layout_height="382dp"
        android:background="@drawable/main_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/quesno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="8dp"
            android:text="1/10"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="89dp"
            android:layout_height="87dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#000000"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SpelQues"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Question"
            android:textColor="#000000"
            android:textSize="45sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="364dp"
        android:layout_height="214dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.367">

        <Button
            android:id="@+id/opt1"
            android:layout_width="166dp"
            android:layout_height="171dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/squareoption"
            android:backgroundTint="#FFAB00"
            android:elevation="13dp"
            android:padding="16dp"
            android:text="option 1"
            android:textColor="@color/item_toolbar"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/opt2"
            android:layout_width="163dp"
            android:layout_height="168dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/squareoption"
            android:backgroundTint="#FFAB00"
            android:elevation="13dp"
            android:padding="16dp"
            android:text="option 2"
            android:textColor="@color/item_toolbar"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="249dp"
        android:layout_height="128dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/thinkinggif"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-44dp" />

</androidx.constraintlayout.widget.ConstraintLayout>